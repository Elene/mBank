<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/cell_card_rl_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/account_background_amex_green">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:paddingLeft="16dp">

                <TextView
                    android:id="@+id/cell_card_tv_name"
                    style="@style/CardTextColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="SOLO"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/cell_card_tv_card_number"
                    style="@style/CardTextColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="XXXX XXXX XXXX 1234"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/CardTextColor"
                        android:layout_width="36dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="4dp"
                        android:text="valid thru"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/cell_card_tv_validity"
                        style="@style/CardTextColor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="05/20"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/cell_card_tv_card_holder"
                    style="@style/CardTextColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="giorgi giorgadze"
                    android:textAllCaps="true"
                    android:textSize="18dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/cell_card_iv_type"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/card_icon_visa_border_single" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>