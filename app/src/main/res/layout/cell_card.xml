<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:background="@drawable/account_background_amex_green">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:paddingLeft="16dp">

            <TextView
                style="@style/CardTextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="SOLO"
                android:textSize="14sp" />

            <TextView
                style="@style/CardTextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:text="XXXX XXXX XXXX 1234"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/CardTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:text="valid thru"
                    android:textSize="12sp" />

                <TextView
                    style="@style/CardTextColor"
                    android:id="@+id/tv_validity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="05/20"
                    android:textSize="18sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/cell_card_tv_card_holder"
                style="@style/CardTextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="giorgi giorgadze"
                android:textAllCaps="true"
                android:textSize="18dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivType"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/card_icon_visa_border_single"
            android:layout_width="50dp"
            android:layout_height="40dp"
            />

    </RelativeLayout>
</FrameLayout>